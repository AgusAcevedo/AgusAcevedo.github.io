---
import { useTranslations } from "../../i18n";
import type { Language } from "../../i18n/languages";
import Layout from "@/layouts/Layout.astro";

import AboutMe from "@/components/AboutMe.astro";
import Briefcase from "@/components/icons/Briefcase.astro";
import CodeIcon from "@/components/icons/Code.astro";
import Article from "@/components/icons/Article.astro";
import ProjectsIcon from "@/components/icons/Projects.astro";
import Experience from "@/components/Experience.astro";
import Education from "@/components/Education.astro";
import GraduationCap from "@/components/icons/GraduationCap.astro";
import ProfileCheck from "@/components/icons/ProfileCheck.astro";
import Stackicon from "@/components/icons/Stackicon.astro";
import Projects from "@/components/Projects.astro";
import Blog from "@/components/Blog.astro";
import MyProjects from "@/components/MyProjects.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import Hero from "@/components/Hero.astro";
import Stack from "@/components/Stack.astro";

const currentLocale = (Astro.currentLocale || 'en') as Language;
const t = useTranslations(currentLocale);
---

<Layout
  title={t.seo.title}
  description={t.seo.description}
>
  <!-- Hidden H1 for SEO (shown to search engines, not visually displayed) -->
  <h1 class="sr-only">{t.personal.name} - {t.personal.jobTitle} | Professional Portfolio</h1>
  
  <main class="px-4">
    <SectionContainer id="top" class="py-16 md:py-36">
      <Hero />
    </SectionContainer>
  </main>
  <div class="space-y-24">
    <SectionContainer id="about">
      <h2
        class="titulo-main flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
      >
        <ProfileCheck class="size-8" />
        {t.about.title}
      </h2>
      <AboutMe />
    </SectionContainer>

    <SectionContainer id="experience">
      <h2
        class="titulo-main flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
      >
        <Briefcase class="size-8" />
        {t.experience.title}
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="education">
      <h2
        class="titulo-main flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
      >
        <GraduationCap class="size-8" />
        {t.education.title}
      </h2>
      <Education />
    </SectionContainer>

    <SectionContainer id="certifications">
      <h2
        class="titulo-main flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
      >
        <CodeIcon class="size-7" />
        {t.projects.title}
      </h2>
      <Projects />
    </SectionContainer>

    <SectionContainer id="stack">
      <h2
        class="titulo-main flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
      >
        <Stackicon class="size-8" />
        {t.stack.title}
      </h2>
      <Stack />
    </SectionContainer>

    <SectionContainer id="projects">
      <h2
        class="titulo-main flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
      >
        <ProjectsIcon class="size-8" />
        {t.myProjects.title}
      </h2>
      <MyProjects />
    </SectionContainer>

    <SectionContainer id="blog">
      <h2
        class="titulo-main flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
      >
        <Article class="size-8" />
        {t.blog.title}
      </h2>
      <Blog />
    </SectionContainer>
  </div>
</Layout>

<style>
  .titulo-main {
    margin-left: 10px;
  }
</style>
