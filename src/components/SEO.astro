---
import { useTranslations } from "../i18n";
import type { Language } from "../i18n/languages";

interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonicalUrl?: string;
  type?: 'website' | 'article' | 'profile';
}

const currentLocale = (Astro.currentLocale || 'es') as Language;
const t = useTranslations(currentLocale);

// Datos personales desde traducciones
const p = t.personal;

const {
  title = t.seo.title,
  description = t.seo.description,
  image = p.ogImage,
  canonicalUrl = Astro.url.href,
  type = 'website'
} = Astro.props;

const fullImageUrl = image.startsWith('http') ? image : `${p.siteUrl}${image}`;
const alternateLocale = currentLocale === 'es' ? 'en' : 'es';
const alternatePath = currentLocale === 'es' ? '/en/' : '/';

// Construir array de redes sociales din√°micamente
const socialLinks: string[] = [];
if (p.linkedin) socialLinks.push(p.linkedin);
if (p.github) socialLinks.push(p.github);
if (p.twitter) socialLinks.push(p.twitter);

// Schema.org JSON-LD para persona/profesional
const schemaPersona = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": p.name,
  "jobTitle": p.jobTitle,
  "description": description,
  "url": p.siteUrl,
  "image": fullImageUrl,
  "sameAs": socialLinks,
  "email": p.email,
  "knowsAbout": p.skills,
  "alumniOf": {
    "@type": "EducationalOrganization",
    "name": p.university
  },
  "worksFor": {
    "@type": "Organization",
    "name": p.currentCompany
  }
};

const schemaWebsite = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": `${p.name} Portfolio`,
  "url": p.siteUrl,
  "description": description,
  "inLanguage": currentLocale === 'es' ? 'es-AR' : 'en-US',
  "author": {
    "@type": "Person",
    "name": p.name
  }
};
---

<!-- Primary Meta Tags -->
<meta name="title" content={title} />
<meta name="description" content={description} />
<meta name="keywords" content={t.seo.keywords} />
<meta name="author" content={p.name} />
<meta name="robots" content="index, follow" />
<meta name="googlebot" content="index, follow" />

<!-- Google Search Console Verification -->
<meta name="google-site-verification" content="dW5FVklswoOeDUwMbCNMdK3Qduway3TmFeDQj_gxmK8" />

<!-- Canonical & Alternate URLs -->
<link rel="canonical" href={canonicalUrl} />
<link rel="alternate" hreflang={currentLocale} href={canonicalUrl} />
<link rel="alternate" hreflang={alternateLocale} href={`${p.siteUrl}${alternatePath}`} />
<link rel="alternate" hreflang="x-default" href={p.siteUrl} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonicalUrl} />
<meta property="og:title" content={t.seo.ogTitle} />
<meta property="og:description" content={t.seo.ogDescription} />
<meta property="og:image" content={fullImageUrl} />
<meta property="og:image:secure_url" content={fullImageUrl} />
<meta property="og:image:type" content="image/png" />
<meta property="og:image:alt" content={`${p.name} - ${p.jobTitle}`} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:locale" content={currentLocale === 'es' ? 'es_AR' : 'en_US'} />
<meta property="og:locale:alternate" content={currentLocale === 'es' ? 'en_US' : 'es_AR'} />
<meta property="og:site_name" content={`${p.name} Portfolio`} />

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={canonicalUrl} />
<meta name="twitter:title" content={t.seo.ogTitle} />
<meta name="twitter:description" content={t.seo.ogDescription} />
<meta name="twitter:image" content={fullImageUrl} />
<meta name="twitter:image:alt" content={`${p.name} - ${p.jobTitle}`} />

<!-- Additional SEO -->
<meta name="theme-color" content={p.themeColor} />
<meta name="msapplication-TileColor" content={p.themeColor} />

<!-- Geo tags for location -->
<meta name="geo.region" content="AR-C" />
<meta name="geo.placename" content="Buenos Aires" />
<meta name="geo.position" content="-34.603722;-58.381592" />
<meta name="ICBM" content="-34.603722, -58.381592" />

<!-- Additional indexing hints -->
<meta name="revisit-after" content="7 days" />
<meta name="rating" content="general" />
<meta name="distribution" content="global" />

<!-- Schema.org JSON-LD -->
<script is:inline type="application/ld+json" set:html={JSON.stringify(schemaPersona)} />
<script is:inline type="application/ld+json" set:html={JSON.stringify(schemaWebsite)} />
